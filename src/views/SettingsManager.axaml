<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ReLaunch.SettingsManager"
        Title="SettingsManager">
  <StackPanel>
     <TextBox x:Name="username" Width="200" HorizontalAlignment="Left" Margin="10" Watermark="Username"/>
     <TextBox x:Name="arguments" Width="200" HorizontalAlignment="Left" Margin="10" Watermark="Arguments"/>
     <TextBox x:Name="javaPath" Width="200" HorizontalAlignment="Left" Margin="10" Watermark="javaPath"/>
     <CheckBox x:Name="defaultNatives" >Use default natvies and libraries</CheckBox>
     <ComboBox x:Name="selectedVersion" SelectedIndex="1">
            <ComboBoxItem></ComboBoxItem>
            <ComboBoxItem>ext1605_20_client</ComboBoxItem>
            <ComboBoxItem>lilypad_qa_r1</ComboBoxItem>
            <ComboBoxItem>v1605_preview</ComboBoxItem>
        </ComboBox>
    <Button Width="200" Height="35" Click="SaveButtonClick">Save</Button>
    </StackPanel>
   
</Window>
